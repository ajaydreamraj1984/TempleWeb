    <!-- Lightweight scripts at end for performance -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script>
        (function($){
          // DOM ready
          $(function(){
            // Simple background lazy loader for hero
            $('.hero-slide').each(function(){
              var $s = $(this);
              var src = $s.attr('data-bg');
              var img = $s.find('img');
              img.attr('src', src);
              // fade in when loaded
              img.on('load', function(){ $s.css({'background':'none'}); $(this).css({opacity:1}); });
            });

            // Menu open/close with smooth arrow animation
            $('.menu .has-sub > a').on('click', function(e){
              e.preventDefault();
              var li = $(this).closest('li');
              $('.menu li').not(li).removeClass('open');
              li.toggleClass('open');
            });

            // Profile dropdown
            $('#profile .profile-btn').on('click keypress', function(e){
              if(e.type==='click' || e.key==='Enter'){
                $('#profile').toggleClass('open');
                var expanded = $('#profile').hasClass('open');
                $('#profile .profile-btn').attr('aria-expanded', expanded);
              }
            });

            // Close on outside click
            $(document).on('click touchstart', function(e){
              if(!$(e.target).closest('.profile').length){ $('#profile').removeClass('open'); }
              if(!$(e.target).closest('.menu').length){ $('.menu li').removeClass('open'); }
            });

            // Mobile drawer toggle
            $('#hamburger').on('click', function(){ $('#drawer').toggleClass('open'); $('#drawer').attr('aria-hidden', !$('#drawer').hasClass('open')); });

            // Accessibility: allow Esc to close
            $(document).on('keydown', function(e){ if(e.key==='Escape'){ $('#profile').removeClass('open'); $('#drawer').removeClass('open'); $('.menu li').removeClass('open'); } });

            // Tiny countdown demo to next aarti (performance-friendly)
            function startCountdown(targetDate){
              function tick(){
                var now = new Date();
                var diff = targetDate - now;
                if(diff<=0){ $('#countdown').text('00:00'); clearInterval(timer); return; }
                var mins = Math.floor((diff/1000/60)%60); var hrs = Math.floor((diff/1000/60/60)%24);
                $('#countdown').text(('0'+hrs).slice(-2)+':'+('0'+mins).slice(-2));
              }
              tick(); var timer = setInterval(tick, 30*1000);
            }
            // compute next aarti (today 6AM or tomorrow 6AM for demo)
            var now = new Date(); var next = new Date(); next.setHours(6,0,0,0); if(now.getHours()>=6) next.setDate(next.getDate()+1);
            startCountdown(next);

            // Lightweight performance tips applied: defer heavy images, minimal DOM updates, no external widget bloat.
          });

        })(jQuery);
    </script>
