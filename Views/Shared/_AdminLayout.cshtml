    <!-- ================== SCRIPT ================== -->
    <script>
        (function ($) {
            // Cached selectors
            const $app = $('#app');
            const $sidebar = $('#sidebar');
            const $menuToggle = $('#menuToggle');
            const $themeBtn = $('#themeBtn');
            const $themeList = $('#themeList');
            const $themeDrop = $('#themeDrop');
            const $profileRoot = $('#profileRoot');
            const $profileBtn = $('#profileBtn');
            const $profileDropdown = $('#profileDropdown');
            const $memberTable = $('#memberTable');

            // DataTable if exists
            // if ($.fn.DataTable && $memberTable.length) {
            //     $memberTable.DataTable({
            //         pageLength: 5,
            //         lengthChange: false,
            //         ordering: true,
            //         info: false,
            //         responsive: true,
            //         autoWidth: false
            //     });
            // }

            // debounce helper
            function debounce(fn, delay) {
                let t;
                return function () { clearTimeout(t); t = setTimeout(() => fn.apply(this, arguments), delay); };
            }

            // Toggle sidebar (click or keyboard)
            $menuToggle.on('click keydown', function (e) {
                if (e.type === 'keydown' && e.key !== 'Enter' && e.key !== ' ') return;
                if (window.innerWidth <= 991) {
                    $sidebar.toggleClass('visible');
                } else {
                    $sidebar.toggleClass('hidden');
                }
                e.preventDefault();
            });

            // THEME: persistence & apply
            const THEME_KEY = 'mlm_dashboard_theme_v1';

            function applyTheme(theme) {
                if (!theme) return;
                $app.attr('data-theme', theme);
                $themeList.find('.item').each(function () {
                    const $it = $(this);
                    $it.attr('aria-checked', $it.data('theme') === theme ? 'true' : 'false');
                });
                try { localStorage.setItem(THEME_KEY, theme); } catch (err) { /* ignore */ }
            }

            // load saved theme or default
            try {
                const saved = localStorage.getItem(THEME_KEY);
                if (saved) applyTheme(saved);
                else applyTheme($app.attr('data-theme') || 'lightgrey');
            } catch (err) { applyTheme($app.attr('data-theme') || 'lightgrey'); }

            // Theme dropdown open/close & keyboard
            function openThemeList() {
                $themeList.addClass('open').attr('aria-hidden', 'false');
                $themeBtn.attr('aria-expanded', 'true');
                const $checked = $themeList.find('.item[aria-checked="true"]').first();
                ($checked.length ? $checked : $themeList.find('.item').first()).focus();
            }
            function closeThemeList() {
                $themeList.removeClass('open').attr('aria-hidden', 'true');
                $themeBtn.attr('aria-expanded', 'false');
            }

            $themeBtn.on('click keydown', function (e) {
                if (e.type === 'keydown' && e.key !== 'Enter' && e.key !== ' ') return;
                e.stopPropagation();
                if ($themeList.hasClass('open')) closeThemeList();
                else {
                    closeProfile(); openThemeList();
                }
            });

            $themeList.on('click', '.item', function (e) {
                const theme = $(this).data('theme');
                if (!theme) return;
                applyTheme(theme);
                closeThemeList();
            });

            $themeList.on('keydown', '.item', function (e) {
                const $items = $themeList.find('.item');
                const idx = $items.index(this);
                if (e.key === 'ArrowDown') {
                    e.preventDefault();
                    const next = $items.eq((idx + 1) % $items.length); next.focus();
                } else if (e.key === 'ArrowUp') {
                    e.preventDefault();
                    const prev = $items.eq((idx - 1 + $items.length) % $items.length); prev.focus();
                } else if (e.key === 'Enter' || e.key === ' ') {
                    e.preventDefault(); $(this).trigger('click');
                } else if (e.key === 'Escape') {
                    closeThemeList(); $themeBtn.focus();
                }
            });

            // PROFILE: open/close with animation class
            function openProfile() {
                $profileDropdown.addClass('open').attr('aria-hidden', 'false');
                $profileBtn.attr('aria-expanded', 'true');
            }
            function closeProfile() {
                $profileDropdown.removeClass('open').attr('aria-hidden', 'true');
                $profileBtn.attr('aria-expanded', 'false');
            }

            $profileBtn.on('click keydown', function (e) {
                if (e.type === 'keydown' && e.key !== 'Enter' && e.key !== ' ') return;
                e.stopPropagation();
                if ($profileDropdown.hasClass('open')) closeProfile();
                else {
                    closeThemeList(); openProfile();
                }
            });

            // Close on outside click or Esc
            $(document).on('click', function (e) {
                const $t = $(e.target);
                if (!$t.closest('#profileRoot').length) closeProfile();
                if (!$t.closest('#themeDrop').length) closeThemeList();
                if (window.innerWidth <= 991 && !$t.closest('#sidebar, #menuToggle').length) {
                    $sidebar.removeClass('visible');
                }
            });

            $(document).on('keydown', function (e) {
                if (e.key === "Escape") {
                    closeProfile(); closeThemeList();
                    if (window.innerWidth <= 991) $sidebar.removeClass('visible');
                }
            });

            // SIDEBAR: submenu behavior (Option C: slide + arrow rotate + active highlight)
            $sidebar.on('click', '.nav-item > .nav-link', function (e) {
                const $link = $(this);
                const $li = $link.parent();
                const $submenu = $li.find('.submenu').first();
                if ($submenu.length) {
                    e.preventDefault();
                    // Close other open submenus (one at a time)
                    $sidebar.find('.nav-item.open').not($li).each(function () {
                        $(this).removeClass('open').find('.submenu').slideUp(180);
                    });

                    if ($li.hasClass('open')) {
                        $li.removeClass('open'); $submenu.slideUp(180);
                    } else {
                        $li.addClass('open'); $submenu.slideDown(220);
                    }

                    // Active highlight for parent item
                    $sidebar.find('.nav-item').removeClass('active');
                    $li.addClass('active');
                } else {
                    // regular link: clear others & set active
                    $sidebar.find('.nav-item').removeClass('active open').find('.submenu').slideUp(120);
                    $li.addClass('active');
                }
            });

            // submenu item click sets active and keeps parent open
            $sidebar.on('click', '.submenu a', function (e) {
                e.preventDefault();
                $sidebar.find('.submenu a.active').removeClass('active');
                $(this).addClass('active');
                const $parentLi = $(this).closest('.nav-item');
                $sidebar.find('.nav-item').removeClass('active').not($parentLi).removeClass('open');
                $parentLi.addClass('active open').find('.submenu').slideDown(180);
            });

            // Auto-open based on current url or data-link
            (function autoOpenActive() {
                try {
                    const current = window.location.pathname.split('/').pop() || '';
                    let opened = false;
                    $sidebar.find('.submenu a').each(function () {
                        const link = ($(this).attr('href') || $(this).data('link') || '').toString();
                        if (link && (link === current || link === window.location.pathname || link === ('#' + current))) {
                            $(this).addClass('active');
                            const $parent = $(this).closest('.nav-item');
                            $parent.addClass('open active').find('.submenu').show();
                            opened = true;
                        }
                    });
                    if (!opened) {
                        const $firstHas = $sidebar.find('.nav-item.has-sub').first();
                        if ($firstHas.length) $firstHas.addClass('open').find('.submenu').show();
                    }
                } catch (err) { /* silent */ }
            })();

            // Accessibility & small helpers
            $('.menu-toggle, .theme-btn, #profileBtn').attr('tabindex', '0');
            $('#menuToggle, #themeBtn, #profileBtn').on('mousedown', function (e) { e.preventDefault(); });

            // Resize handler (debounced)
            $(window).on('resize', debounce(function () {
                if (window.innerWidth > 991) {
                    $sidebar.removeClass('visible');
                }
            }, 160));

        })(jQuery);
    </script>
